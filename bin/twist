"""
Run a Twisted application.
"""

import sys
import os

try:
    import _preamble
    _preamble
except ImportError:
    try:
        sys.exc_clear()
    except AttributeError:
        # exc_clear() (and the requirement for it) has been removed from Py3
        pass

sys.path.insert(0, os.path.abspath(os.getcwd()))

from twisted.application.twist import Twist
Twist.main()
